<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js"></script>
<script>tinymce.init({selector:'textarea#texto'});</script>
<div class="form-group">
    <label for="titulo" class="col-sm-2 control-label">Titulo</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Titulo" value="<%= artigo.titulo %> ">
    </div>
</div>

<div class="form-group">
    <label for="autor" class="col-sm-2 control-label">Autor</label>
    <div class="col-sm-10">
        <p class="form-control-static"><%artigo.autor.nome%></p>
        <input type="hidden" name="autor_nome" value="<%=artigo.autor.nome%>">
        <input type="hidden" name="autor_id" value="<%=artigo.autor.id%>">
    </div>
</div>

<div class="form-group">
    <label for="resumo" class="col-sm-2 control-label">Resumo</label>
    <div class="col-sm-10">
        <textarea rows="2" class="form-control" id="resumo" name="resumo" placeholder="resumo"><%= artigo.resumo%></textarea>
    </div>
</div>

<div class="form-group">
    <label for="texto" class="col-sm-2 control-label">Texto</label>
    <div class="col-sm-10">
        <textarea rows="5" class="form-control" id="texto" name="texto" placeholder="texto completo do artigo"><%= artigo.texto%></textarea>
    </div>
</div>

<div class="form-group">
    <label for="autor" class="col-sm-2 control-label">Criado em</label>
    <div class="col-sm-10">
        <p class="form-control-static"><%=
            artigo.criado?artigo.criado.toLocaleString():''
            %></p>
        <input type="hidden" name="criado" value="<%=artigo.criado%>">
    </div>
</div>

<div class="form-group">
    <label for="autor" class="col-sm-2 control-label">Atualizado em</label>
    <div class="col-sm-10">
        <p class="form-control-static"><%=
            (artigo.atualizado)? artigo.atualizado.toLocaleString():''%></p>
    </div>
</div>

<input type="hidden" name="comentarios" value="<%= artigo.comentarios%>" %>

